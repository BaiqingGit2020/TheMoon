<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    app:cardCornerRadius="14dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/transparent">
    <LinearLayout
        android:id="@+id/swip_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recommend_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="@dimen/afc_30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="24sp"
            android:text="@string/app_name"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/swipcard_content_padding"
            android:layout_marginRight="@dimen/swipcard_content_padding"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/recommend_book_img"
                android:layout_width="100dp"
                android:layout_height="132dp"
                android:scaleType="fitXY"
                android:src="@mipmap/no_image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/afc_30dp"
                    android:text="作者："/>
                <TextView
                    android:id="@+id/recommend_book_writer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:text="@string/app_name"/>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/recommend_book_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333030"
            android:layout_margin="@dimen/swipcard_content_padding"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name"
            android:textSize="18sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
